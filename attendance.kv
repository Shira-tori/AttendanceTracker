#: import FallOutTransition kivy.uix.screenmanager.FallOutTransition

<ScreenMan>:
	lrn: lrn
	password: password
	fullname: fullname
	section: section
	grade: grade
	lrn_register: lrn_register
	password_register: password_register
	signup_screen: signup_screen
	floatLayout: float_layout
	signupButton: signupButton
	loginButton: loginButton
	transition: FallOutTransition()
	students_ui: students_ui
	Screen:
		id: login_screen
		name: "login_screen"
		MDFloatLayout:
			id: float_layout
			MDTextField:
				id: lrn
				hint_text: "LRN"
				mode: "rectangle"
				size_hint_x: .75
				pos_hint: {"center_x": .5, "center_y": .55}
			MDTextField:
				id: password
				hint_text: "Password"
				mode: "rectangle"
				size_hint_x: .75
				pos_hint: {"center_x": .5, "center_y": .45}
				required: True
				password: True
			MDFlatButton:
				id: signupButton
				text: "Sign Up"
				size_hint_x: .372
				pos_hint: {"center_x": .310, "center_y": .35}
				on_release: root.current = "signup_screen"
			MDRaisedButton:
				id: loginButton
				text: "Login"
				size_hint_x: .372
				pos_hint: {"center_x": .69, "center_y": .35}
				on_release: root.login()
	Screen:
		id: signup_screen
		name: "signup_screen"
		MDFloatLayout:
			#MDRelativeLayout:
			#	pos_hint: {'y': .699}
			#	height: "48dp"
			#	MDCheckbox:
			#		group: 'group'
			#		size_hint: None, None
			#		size: "48dp", "48dp"
			#		pos_hint: {'center_x': .14, 'center_y': .082}
			#		active: True
			#	MDLabel:
			#		text: "Student"	
			#		size_hint: None, 1
			#		size_x: "52dp" 
			#		pos_hint: {'x': .17}
			#	MDLabel:
			#		text: "Teacher"	
			#		size_hint: None, 1
			#		size_x: "52dp"
			#		pos_hint: {'x': .8}
			#	MDCheckbox:
			#		group: 'group'
			#		size_hint: None, None
			#		size: "48dp", "48dp"
			#		pos_hint: {'center_x': .77, 'center_y': .082}
		
			MDTextField:
				id: fullname 
				hint_text: "Fullname"
				mode: "rectangle"
				size_hint_x: .75
				pos_hint: {"center_x": .5, "center_y": .85}
				required: True
			#TODO: FIX THE POS OF GRADE TEXT FIELD
			MDTextField:
				id: grade
				hint_text: "Grade"
				mode: "rectangle"
				size_hint_x: .75
				pos_hint: {"center_x": .5, "center_y": .70}
				required: True
			MDTextField:
				id: section
				hint_text: "Section"
				mode: "rectangle"
				size_hint_x: .75
				pos_hint: {"center_x": .5, "center_y": .55}
				required: True
			MDTextField:
				id: lrn_register
				hint_text: "LRN"
				mode: "rectangle"
				size_hint_x: .75
				pos_hint: {"center_x": .5, "center_y": .40}
				required: True
			MDTextField:
				id: password_register
				hint_text: "Password"
				mode: "rectangle"
				size_hint_x: .75
				pos_hint: {"center_x": .5, "center_y": .25}
				required: True
				password: True
			MDFlatButton:
				text: "Back"
				size_hint_x: .372
				pos_hint: {"center_x": .31, "center_y": .15}
				on_release: root.current = "login_screen"
			MDRaisedButton:
				text: "Sign Up"
				size_hint_x: .372
				pos_hint: {"center_x": .69, "center_y": .15}
				on_release: root.register()	

	Screen:
		name: "students_ui"
		id: students_ui
		BoxLayout:
			size_hint_y: 1 
			size_hint_x: 1
			orientation: "vertical"
			canvas.before:
				Color:
					rgba: .1326, .3907, .4767, 1
				Rectangle:
					pos: self.pos
					size: self.size
		    

			MDTopAppBar:
				title: "Student's Account"
				md_bg_color: "black"
				left_action_items: [["menu", lambda x: app.callback()]]
				elevation: 15
	   
			FloatLayout:        
				MDCard:
					ripple_behavior: True
					orientation: "vertical"
					size_hint: None, None
					size: "200dp", "180dp"
					pos_hint: {"center_x": .5, "center_y": .7}
					MDLabel:
						text: "Daily QR Code"
						theme_text_color: "Custom"
						text_color: "teal"
						font_size: 40
						font_name: "Comic"
						bold: True
						halign: "center"
						valign: "middle"

				MDCard:
					ripple_behavior: True
					orientation: "vertical"
					size_hint: None, None
					size: "200dp", "180dp"
					pos_hint: {"center_x": .5, "center_y": .3}
					#elevation: 20
										
					MDLabel:
						text: "QR Code Scanner"
						theme_text_color: "Custom"
						text_color: "teal"
						font_size: 40
						font_name: "Comic"
						bold: True
						halign: "center"
						valign: "middle"


